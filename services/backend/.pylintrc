[MASTER]
# Add files or directories to the blacklist
ignore=CVS,.git,__pycache__,venv,env,.venv,.env,node_modules,build,dist

# Use multiple processes to speed up Pylint
jobs=4

[MESSAGES CONTROL]
# Disable specific warnings that are too strict for this project
disable=
    # Disable import errors (handled by tests)
    import-error,
    # Too many arguments/attributes/etc are sometimes necessary
    too-many-arguments,
    too-many-instance-attributes,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    # Line too long - handled by black/autopep8
    line-too-long,
    # Missing docstrings
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    # Unused imports/arguments handled by tests
    unused-argument,
    # Broad exceptions are sometimes appropriate
    broad-exception-caught,
    # Invalid names (e.g., short variable names)
    invalid-name,
    # Fixme/todo comments
    fixme,
    # Duplicate code
    duplicate-code,
    # Wrong import position (sometimes necessary for mocks)
    wrong-import-position,
    # Redefined outer name (common in pytest fixtures)
    redefined-outer-name,
    # Protected access (sometimes needed for testing)
    protected-access,
    # Consider using dict.get (too strict)
    consider-using-dict-get

[REPORTS]
# Set the output format
output-format=colorized

# Activate the evaluation score
score=yes

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,Run,_,id,db,app,api

# Regular expression matching correct argument names
argument-rgx=[a-z_][a-z0-9_]{1,30}$

# Regular expression matching correct variable names
variable-rgx=[a-z_][a-z0-9_]{1,30}$

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=1000

[DESIGN]
# Minimum number of public methods for a class
min-public-methods=0

# Maximum number of public methods for a class
max-public-methods=25

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=10

# Ignore comments when computing similarities
ignore-comments=yes

# Ignore docstrings when computing similarities
ignore-docstrings=yes

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=REQUEST,acl_users,aq_parent,execute,data

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=builtins.Exception
